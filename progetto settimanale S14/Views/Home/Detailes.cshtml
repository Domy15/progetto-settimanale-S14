@model Article

@{
	ViewData["Title"] = "Dettagli del prodotto";
}

<div>
	<a asp-controller="Home" asp-action="Index">Torna alla Home</a>
</div>

<div class="d-flex mt-5">
	<img src="@Model.Cover" style="width: 30em; height: 30em" />
	<div class="ms-3 w-75">
		<h2>@Model.Name</h2>
		<hr />
		<p>@Model.Description</p>
		<p class="fw-bold">@Model.Price €</p>
	</div>
</div>

<h2 class="mt-5">Foto Aggiuntive dell'articolo</h2>
<div class="d-flex align-items-center">
    @foreach (var image in @Model.Images)
    {
        <div style="width: 8em; height: 8em" class="me-2">
            <img src="@image" class="d-block w-100 h-100" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="openModal('@image')" />
        </div>
    }
</div>

<!-- Modale -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" class="w-100" />
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function openModal(imageSrc) {
            document.getElementById('modalImage').src = imageSrc;
        }
    </script>
}
